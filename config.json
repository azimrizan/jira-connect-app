{
  "development": {
    "port": 3000,
    "errorReporting": true,
    "store": {
      "adapter": "sequelize",
      "dialect": "sqlite",
      "storage": "database.sqlite"
    }
  },
  "production": {
    "port": 8080,
    "store": {
      "adapter": "sequelize",
      "dialect": "postgres",
      "url": "$DATABASE_URL",
      "dialectOptions": {
        "ssl": {
          "require": true,
          "rejectUnauthorized": false
        }
      }
    }
  }
}
