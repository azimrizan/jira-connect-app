{
    "key": "aava-refiner-connect",
    "name": "AAVA Description Refiner",
    "description": "Refine Jira issue descriptions using Gemini AI",
    "vendor": {
        "name": "AAVA",
        "url": "https://example.com"
    },
    "baseUrl": "https://jira-connect-app.onrender.com",
    "links": {
        "self": "https://jira-connect-app.onrender.com/atlassian-connect.json"
    },
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "READ",
        "WRITE"
    ],
    "modules": {
        "jiraIssueContents": [
            {
                "key": "aava-refiner-panel",
                "name": {
                    "value": "Refine with AAVA"
                },
                "url": "/render-refiner?issueKey={issue.key}",
                "location": "jira.issue.content",
                "target": {
                    "type": "webpanel"
                }
            }
        ]
    }
}